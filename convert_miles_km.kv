BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        # TextInput for miles
        TextInput:
            id: input_miles
            text: '0'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate()  # Automatically update on text change

        # Up and Down buttons
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            spacing: 10

            Button:
                text: 'Up'
                font_size: 24
                on_press: app.handle_increment(1)  # Increment by 1

            Button:
                text: 'Down'
                font_size: 24
                on_press: app.handle_increment(-1)  # Decrement by 1

    Button:
        text: 'Convert miles to km'
        font_size: 24
        on_press: app.handle_calculate()



    # Output label
    Label:
        id: output_label
        text: app.output_text  # Bound to the StringProperty
        font_size: 48
        color: 1, 1, 0, 1  # Yellow text
        bold: True